  </head>

  <body>
    <img src="/images/title.png" alt="Write Away" class="logoCream" style="width: 250px;">
    <nav class="layoutButtons">
        
          <% if (typeof user === "undefined") { %> 
          <div class="navs"><a class="signup" href="/auth/signup">Sign up...</a>
            <a class="login" href="/auth/login"> Log in...</a>
           <% } else { %>
            <a class="mynotes" href="/auth/profile"> My notes...</a>
            <a class="create" href="/note/create"> Create note...</a>
            <a class="logout" href="/auth/logout">Log out...</a>
            <% } %></div>
      <!-- </ul> -->
    </nav>
    <%- body %>

    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
